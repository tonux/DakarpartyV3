<%- model_class = CategoryAnnonce -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:titleCategory) %></th>
      <th><%= model_class.human_attribute_name(:descCategory) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @category_annonces.each do |category_annonce| %>
      <tr>
        <td><%= link_to category_annonce.id, category_annonce_path(category_annonce) %></td>
        <td><%= category_annonce.titleCategory %></td>
        <td><%= category_annonce.descCategory %></td>
        <td><%=l category_annonce.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_category_annonce_path(category_annonce), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      category_annonce_path(category_annonce),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_category_annonce_path,
            :class => 'btn btn-primary' %>
