<%= form_for @annonce, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :categoryAnnonce_id, :class => 'control-label' %>
    <div class="controls">
      <% categoryAnnonce_array = CategoryAnnonce.all.map { |categoryAnnonce| [categoryAnnonce.titleCategory, categoryAnnonce.id] } %>
      <%= options_for_select(categoryAnnonce_array) %>
      <%= f.select(:categoryAnnonce_id, options_for_select(categoryAnnonce_array)) %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :titleAnnonce, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titleAnnonce, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descAnnonce, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :descAnnonce, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_debut, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date_debut, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_fin, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date_fin, :class => 'date_select' %>
    </div>
  </div>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                annonces_path, :class => 'btn' %>
  </div>
<% end %>
