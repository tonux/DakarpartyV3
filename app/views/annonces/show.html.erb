<%- model_class = Annonce -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titleAnnonce) %>:</strong></dt>
  <dd><%= @annonce.titleAnnonce %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descAnnonce) %>:</strong></dt>
  <dd><%= @annonce.descAnnonce %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_debut) %>:</strong></dt>
  <dd><%= @annonce.date_debut %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_fin) %>:</strong></dt>
  <dd><%= @annonce.date_fin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:categoryAnnonce_id) %>:</strong></dt>
  <dd><%= @annonce.categoryAnnonce_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @annonce.user_id %></dd>
</dl>

<% if user_signed_in? and (current_user.admin? || current_user.adminActu?) %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              annonces_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_annonce_path(@annonce), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              annonce_path(@annonce),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<% end %>
