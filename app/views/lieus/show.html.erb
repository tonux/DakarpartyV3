<%- model_class = Lieu -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nomLieu) %>:</strong></dt>
  <dd><%= @lieu.nomLieu %></dd>
  <dt><strong><%= model_class.human_attribute_name(:NomRegion) %>:</strong></dt>
  <dd><%= @lieu.NomRegion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descLieu) %>:</strong></dt>
  <dd><%= @lieu.descLieu %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lieus_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lieu_path(@lieu), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lieu_path(@lieu),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
