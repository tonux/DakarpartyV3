<%= form_for @actualite, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <div class="control-group">
    <%= f.label :categoryActu_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :categoryActu_id, options_for_select(  CategoryActu.all.map { |categoryActu| [categoryActu.titleCategory, categoryActu.id] }) %>
      <%# categoryActu_array = CategoryActu.all.map { |categoryActu| [categoryActu.titleCategory, categoryActu.id] } %>
      <%#= options_for_select(categoryActu_array) %>
      <%#= f.select(:categoryActu_id, options_for_select(categoryActu_array)) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :picture, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :picture, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :titleActu, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titleActu, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contenu, :class => "tinymce", :rows => 40, :cols => 120  %>
    <div class="controls">
      <%= f.text_area :contenu, :class => 'text_field' %>
    </div>
  </div>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                actualites_path, :class => 'btn' %>
  </div>
<% end %>
