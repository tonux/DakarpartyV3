<%= form_for @structure, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nomStructure, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nomStructure, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :adresse, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :adresse, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :telephone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telephone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descStructure, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :descStructure, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                structures_path, :class => 'btn' %>
  </div>
<% end %>
