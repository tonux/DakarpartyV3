<%- model_class = Structure -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nomStructure) %>:</strong></dt>
  <dd><%= @structure.nomStructure %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adresse) %>:</strong></dt>
  <dd><%= @structure.adresse %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
  <dd><%= @structure.telephone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @structure.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descStructure) %>:</strong></dt>
  <dd><%= @structure.descStructure %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              structures_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_structure_path(@structure), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              structure_path(@structure),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
