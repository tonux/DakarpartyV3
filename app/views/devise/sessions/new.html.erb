<div class="row-fluid" style="">
<div class="span9" style="width:73%">
<h2>Se connecter</h2>
<div class="well " style="">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
  <div><%= f.label :email %>
  <%= f.email_field :email %></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password %></div><br />

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Se connecter", :class => ' btn btn-primary btn-large' %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>	
</div>
<div class="span3" style="width:22%" >
              <ul class="nav nav-pills nav-stacked" style="text-align: justify">
                      <li class="active">
                        <a href="#">Nous suivre sur Facebook</a>
                      </li>
              </ul>

</div>
</div>